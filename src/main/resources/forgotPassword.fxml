<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.bankaccount.ForgotPasswordController"
      spacing="15" style="-fx-padding: 20;" prefWidth="400" prefHeight="450">

    <Label text="Forgot Password" style="-fx-font-size: 18; -fx-font-weight: bold;">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <Label text="Please verify your identity to reset your password"
           style="-fx-text-fill: #666; -fx-wrap-text: true;"/>

    <Separator/>

    <VBox spacing="10">
        <Label text="Username:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="usernameField" promptText="Enter your username"/>

        <Label text="ID Number:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="idNumberField" promptText="Enter your ID number"/>

        <Label text="Email:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="emailField" promptText="Enter your registered email"/>

        <Button text="Verify Identity" onAction="#handleVerifyUser"
                style="-fx-background-color: #007bff; -fx-text-fill: white;"
                defaultButton="true"/>
    </VBox>

    <Separator/>

    <VBox spacing="10" disable="true">
        <Label text="Security Question:" style="-fx-font-weight: bold;"/>
        <Label fx:id="securityQuestionLabel" text="Please verify your identity first"
               style="-fx-text-fill: #666; -fx-wrap-text: true;"/>

        <TextField fx:id="securityAnswerField" promptText="Enter your answer"/>

        <HBox spacing="10">
            <Button fx:id="resetButton" text="Reset Password"
                    onAction="#handleResetPassword"
                    style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
            <Button fx:id="cancelButton" text="Cancel"
                    onAction="#handleCancel"
                    style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
        </HBox>
    </VBox>

</VBox>