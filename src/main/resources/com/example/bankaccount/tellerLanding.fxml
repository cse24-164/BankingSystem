<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700" prefWidth="1000" styleClass="dashboard-container" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankaccount.TellerLandingController">

    <top>
        <VBox prefHeight="98.0" prefWidth="1000.0" styleClass="dashboard-header">
            <HBox alignment="CENTER_LEFT">
                <Label styleClass="header-icon" />
                <VBox spacing="2">
                    <Label fx:id="welcomeLabel" styleClass="header-title" text="Bank Teller Dashboard" />
                    <Label fx:id="branchLabel" styleClass="header-subtitle" text="Branch: ">
                  <padding>
                     <Insets right="10.0" top="10.0" />
                  </padding>
                  <font>
                     <Font name="Arial" size="12.0" />
                  </font></Label>
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="timeLabel" styleClass="header-subtitle" text="00:00">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin></Label>
            </HBox>
        </VBox>
    </top>

    <center>
        <HBox alignment="TOP_CENTER" prefHeight="567.0" prefWidth="1219.0" spacing="40" style="-fx-background-color: 4166cf;" styleClass="tab-content">


            <VBox alignment="CENTER" prefHeight="600.0" prefWidth="1024.0" spacing="25" style="-fx-background-color: #4166cf, #a6adbc;">
                <Label styleClass="panel-title-large" text="Customer Account Management">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Label>

                       <Button onAction="#openIndividualAccount" styleClass="btn-primary, btn-large" text="Open Individual Account">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button onAction="#openCompanyAccount" styleClass="btn-primary, btn-large" text="Open Company Account" />
            <Button onAction="#viewAccountHistory" styleClass="btn-primary, btn-large" text="View History" />
                <Button onAction="#handleExit" styleClass="btn-primary, btn-large" stylesheets="@styles.css" text="Exit" />
            <HBox.margin>
               <Insets left="15.0" />
            </HBox.margin>
            </VBox>
         <BorderPane.margin>
            <Insets bottom="-30.0" left="-130.0" right="-90.0" top="-20.0" />
         </BorderPane.margin>

        </HBox>
    </center>
</BorderPane>
