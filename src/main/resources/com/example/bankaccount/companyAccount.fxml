<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="1200" styleClass="teller-container" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankaccount.CompanyAccountController">

    <top>
        <VBox styleClass="teller-header">
            <HBox alignment="CENTER_LEFT">
                <VBox spacing="2">
                    <Label fx:id="welcomeLabel" styleClass="header-title" text="Company Account Opening" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                 <Button onAction="#handleOpenAccount" styleClass="btn-primary" text="Open Account">
               <HBox.margin>
                  <Insets right="40.0" />
               </HBox.margin>
            </Button>
                <Button onAction="#handleBack" styleClass="btn-secondary" text="Back" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox alignment="TOP_CENTER" prefHeight="682.0" prefWidth="1198.0" spacing="20" styleClass="tab-content">

                <!-- Company Information Section -->
                <VBox prefHeight="224.0" prefWidth="1158.0" spacing="15" styleClass="form-section">
                    <Label styleClass="panel-title-large" text="Company Information" />

                    <GridPane hgap="15" prefWidth="1100" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="150" />
                            <ColumnConstraints prefWidth="250" />
                            <ColumnConstraints prefWidth="150" />
                            <ColumnConstraints prefWidth="250" />
                        </columnConstraints>

                        <!-- Row 1 -->
                        <Label styleClass="form-label" text="Company Name:*" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="companyNameField" promptText="Required" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label styleClass="form-label" text="Registration No:*" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <TextField fx:id="registrationNumberField" promptText="Required" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                        <!-- Row 2 -->
                        <Label styleClass="form-label" text="Business Type:*" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="businessTypeField" promptText="e.g., Retail, Manufacturing" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label styleClass="form-label" text="Annual Revenue:*" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField fx:id="annualRevenueField" promptText="0.00" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <!-- Row 3 -->
                        <Label styleClass="form-label" text="Contact Person:*" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="contactPersonField" promptText="Required" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label styleClass="form-label" text="Phone:*" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <TextField fx:id="customerPhoneField" promptText="Required" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                        <!-- Row 4 -->
                        <Label styleClass="form-label" text="Address:*" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="customerAddressField" promptText="Required" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label styleClass="form-label" text="Email:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                        <TextField fx:id="customerEmailField" promptText="Optional" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
                    </GridPane>
                </VBox>

                <!-- Account Opening Section -->
                <VBox prefHeight="250.0" prefWidth="1158.0" spacing="15" styleClass="form-section">
                    <Label styleClass="panel-title-large" text="Account Details" />

                    <HBox alignment="CENTER_LEFT" spacing="20">
                        <VBox spacing="10">
                            <Label styleClass="form-label" text="Account Type:*">
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin></Label>
                            <ComboBox fx:id="accountTypeComboBox" prefWidth="200" styleClass="combo-box">
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin></ComboBox>
                        </VBox>

                        <VBox spacing="10">
                            <Label styleClass="form-label" text="Initial Deposit:*">
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin></Label>
                            <TextField fx:id="initialDepositField" prefWidth="150" promptText="P0.00" styleClass="amount-field">
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin></TextField>
                        </VBox>

                        <VBox spacing="10">
                            <Label styleClass="form-label" text="Minimum Required:">
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin></Label>
                            <Label fx:id="minimumDepositLabel" styleClass="form-label" text="P0.00">
                        <VBox.margin>
                           <Insets top="30.0" />
                        </VBox.margin></Label>
                        </VBox>
                  <VBox.margin>
                     <Insets top="30.0" />
                  </VBox.margin>
                    </HBox>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
                </VBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="20">
                    <Button onAction="#handleClearForm" styleClass="btn-secondary" text="Clear Form">
                  <HBox.margin>
                     <Insets right="40.0" top="20.0" />
                  </HBox.margin></Button>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <Label styleClass="footer-text" text="First-Forward Bank • Teller System • Authorized Personnel Only" />
        </HBox>
    </bottom>
</BorderPane>
