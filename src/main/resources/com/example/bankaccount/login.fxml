<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="529.0" prefWidth="500" styleClass="login-container" stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.bankaccount.LoginController">

        <children>
            <VBox styleClass="login-content" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="60" AnchorPane.rightAnchor="60" AnchorPane.topAnchor="40">

                <!-- Header -->
                <VBox alignment="CENTER" spacing="15">
                    <Label styleClass="login-icon" text="" />
                    <Label styleClass="login-title" text="Login" />
                    <Label styleClass="login-subtitle" text="Enter your credentials to continue" />
                </VBox>

                <!-- Login Form -->
                <VBox spacing="20" styleClass="form-container">
                    <VBox spacing="8">
                        <Label styleClass="form-label" text="Username" />
                        <TextField fx:id="usernameField" promptText="Enter your username" styleClass="form-field" />
                    </VBox>

                    <VBox spacing="8">
                        <Label styleClass="form-label" text="Password" />
                        <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="form-field" />
                    </VBox>

                    <!-- Buttons -->
                    <HBox alignment="CENTER" spacing="10">
                        <Button defaultButton="true" onAction="#handleLogin" styleClass="btn-primary, btn-medium" text="Login" />
                    </HBox>
                </VBox>

                  <Label onMouseClicked="#handleForgotPassword" style="-fx-text-fill: #007bff; -fx-cursor: hand; -fx-underline: true;" text="Forgot Password?">
            <VBox.margin>
               <Insets />
            </VBox.margin>
                  </Label>

            </VBox>
        </children>

</AnchorPane>
