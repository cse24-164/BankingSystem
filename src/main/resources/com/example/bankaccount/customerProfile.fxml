<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="rootPane"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.bankaccount.CustomerProfileController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>


    <Label text="Customer Profile" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <font>
            <Font size="20"/>
        </font>
    </Label>

    <!-- Common fields -->
    <Label text="Customer ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label fx:id="customerIdLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Label fx:id="nameLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Label fx:id="emailLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Phone:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Label fx:id="phoneLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Address:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Label fx:id="addressLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <!-- Individual fields wrapped in VBox -->
    <VBox fx:id="individualFields" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2" spacing="5" visible="false">
        <Label text="ID Number:"/>
        <Label fx:id="idNumberLabel"/>
        <Label text="Date of Birth:"/>
        <Label fx:id="dobLabel"/>
        <Label text="Gender:"/>
        <Label fx:id="genderLabel"/>
    </VBox>

    <!-- Company fields wrapped in VBox -->
    <VBox fx:id="companyFields" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2" spacing="5" visible="false">
        <Label text="Company Registration No:"/>
        <Label fx:id="regNumberLabel"/>
    </VBox>

</GridPane>
